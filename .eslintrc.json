{
  "env": {
    "node": true,
    "browser": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-undef": "off",
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ]
  },
  "globals": {
    "require": "readonly",
    "module": "readonly",
    "process": "readonly"
  }
}